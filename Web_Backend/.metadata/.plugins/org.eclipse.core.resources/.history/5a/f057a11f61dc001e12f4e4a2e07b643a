package com.ssafy.ws.step3.servlet;

import java.io.IOException;

import com.ssafy.ws.step3.dto.User;

import jakarta.servlet.RequestDispatcher;
import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.Cookie;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import jakarta.servlet.http.HttpSession;

// 이 서블릿이 호출되기 위해서는 url 상에 http://server_ip:port/context_name/main 이 필요하다.
@WebServlet("/main)")
public class MainServlet extends HttpServlet {

	private static final long serialVersionUID = 1L;
	
	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {

		process(req, resp);
	}
	
	@Override
	protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		req.setCharacterEncoding("UTF-8");
		process(req, resp);
	}
	
	private void process(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		String action = req.getParameter("action");
		switch(action) {
		case"regist":
			doRegist(req,resp);
			break;
		case "login":
			doLogin(req,resp);
			break;
		case "logout":
			doLogout(req,resp);
			break;
		}
	}
	
	private void doRegist(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		String isbn = req.getParameter("isbn");
		String title = req.getParameter("title");
		String author = req.getParameter("author");
		String desc = req.getParameter("desc");
		int price = Integer.parseInt(req.getParameter("price"));
		
		req.setAttribute("isbn", isbn);
		req.setAttribute("title", title);
		req.setAttribute("author", author);
		req.setAttribute("desc", desc);
		req.setAttribute("price", price);
		
		RequestDispatcher disp =req.getRequestDispatcher("/register_result.jsp");
		disp.forward(req, resp);
	}
	
	private void doLogin(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		String id = req.getParameter("userid");
		String password = req.getParameter("userpass");
		String name = "김현태";
		
		User user = new User();
		user.setId(id);
		user.setPass(password);
		user.setName(name);
		
		Cookie userId = new Cookie("userId",id);
		userId.setMaxAge(60*60*24);
		resp.addCookie(userId);
		
		String msg = "로그인 성공";
		
		HttpSession session = req.getSession();
		
		if(id.equals("ssafy")&&password.equals("1234")) {
			session.setAttribute("loginUser", user);
		}else {
			msg = "로그인 실패!";
		}
		req.setAttribute("msg", msg);
		
		RequestDispatcher disp = req.getRequestDispatcher("/regist.jsp");
		disp.forward(req, resp);
		
	}
	private void doLogout(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		// session 가져오기
		HttpSession session = req.getSession();
		
//		// session 만료시키기
		session.invalidate();;
		
//		// 리다이렉트 시키기
		resp.sendRedirect("./regist.jsp");
	}
	
}
